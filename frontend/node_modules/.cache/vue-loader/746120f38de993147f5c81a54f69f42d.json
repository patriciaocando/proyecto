      <button @click=\"activateEdition(index)\">Editar</button>\n        <p>{{answer.answer}}</p>\n        <div class=\"metaAnswer\">\n          <p>RESPONDIDA:{{answer.respond}}</p>\n          <p>{{answer.rating}}</p>\n        </div>\n      </div>\n      <!--EDITAR RESPUESTA-->\n      <div v-show=\"editAnswer\" class=\"answerEdit\">\n        <div>\n          <textarea type=\"text\" name=\"textAnswer\" rows=\"4\" v-model=\"editedAnswer\"></textarea>\n\n          <button @click=\"sendDeleteAnswer(answer.id)\">Borrar respuesta</button>\n        </div>\n        <button @click=\"sendEditionText(answer.id)\">GUARDAR</button>\n        <button @click=\"cancelRequest()\">CANCELAR</button>\n      </div>\n    </div>\n  </div>\n</template>\n\n<script>\nimport { dateTransform } from \"../utils/helpers\";\nexport default {\n  name: \"Answercomponent\",\n  data() {\n    return {\n      hideAnswer: true,\n      editAnswer: false,\n      editedAnswer: \"\",\n      editedAnswerData: {},\n    };\n  },\n  props: {\n    answers: Array,\n  },\n  methods: {\n    getImageName(name) {\n      let url = process.env.VUE_APP_STATIC;\n      return url + name;\n    },\n    activateEdition(index) {\n      this.editAnswer = true;\n      this.hideAnswer = false;\n\n      this.editedAnswer = this.answers[index].answer;\n    },\n    sendEditionText(idAnswer) {\n      this.editedAnswerData = {\n        id: idAnswer,\n        content: this.editedAnswer,\n      };\n\n      let answerData = this.editedAnswerData;\n\n      this.$emit(\"editedAnswer\", answerData);\n    },\n    sendDeleteAnswer(idAnswer) {\n      this.$emit(\"deleteAnswer\", idAnswer);\n    },\n\n    cancelRequest() {\n      this.editAnswer = false;\n      this.hideAnswer = true;\n    },\n  },\n};\n</script>\n\n<style scoped>\n.answerContent {\n  border: 1px solid gray;\n}\n</style>"]}]}